# Solana Wallet Configuration
PRIVATE_KEY=your_base58_encoded_private_key_here
PUBLIC_KEY=your_public_key_here

# Solana RPC Endpoints
RPC_ENDPOINT=https://api.mainnet-beta.solana.com
# Alternative RPC endpoints for load balancing
RPC_ENDPOINT_BACKUP=https://solana-api.projectserum.com
RPC_ENDPOINT_PAID=https://your-paid-rpc-endpoint.com

# WebSocket Endpoints
WS_URI=wss://pumpportal.fun/api/data
TRADE_URL=https://pumpportal.fun/api/trade-local
JUPITER_API=https://quote-api.jup.ag/v6

# Trading Parameters
MIN_TRADE_SIZE=0.05              # Minimum trade size in SOL
MAX_TRADE_SIZE=1.0               # Maximum trade size in SOL
PROFIT_TARGET=1000               # Daily profit target in USD
MAX_SLIPPAGE=0.01                # Maximum allowed slippage (1%)

# Risk Management
STOP_LOSS_PERCENTAGE=0.02        # Stop loss at 2%
TAKE_PROFIT_PERCENTAGE=0.05      # Take profit at 5%
MAX_TRADE_DURATION=3600          # Maximum trade duration in seconds (1 hour)
TRADE_TIMEOUT=30                 # Individual trade timeout in seconds

# Strategy Parameters
MIN_PROFIT_THRESHOLD=0.001       # Minimum profit threshold (0.1%)
MIN_LIQUIDITY=2.0                # Minimum liquidity in SOL
MAX_PRICE_THRESHOLD=0.1          # Maximum price threshold in SOL

# Rate Limiting
API_RATE_LIMIT=10                # Requests per second
WEBSOCKET_RATE_LIMIT=5           # WebSocket messages per second
RECONNECT_INTERVAL=5             # Seconds between reconnection attempts

# Monitoring and Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Database (Optional)
DATABASE_URL=sqlite:///trading_bot.db
# PostgreSQL alternative:
# DATABASE_URL=postgresql://user:password@localhost/trading_bot

# Logging
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=trading_bot.log
MAX_LOG_SIZE=100MB              # Maximum log file size

# Development Settings
DEBUG=false
ENABLE_BACKTESTING=false
PAPER_TRADING=false             # Set to true for simulation mode

# Priority Fees (in lamports)
PRIORITY_FEE=5000               # Base priority fee
BRIBERY_FEE=10000              # Additional fee for MEV protection

# Performance Tuning
MAX_CONCURRENT_TRADES=5         # Maximum simultaneous trades
MARKET_DATA_CACHE_TTL=60        # Market data cache time in seconds
CONNECTION_POOL_SIZE=10         # HTTP connection pool size
